<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:onClick="changeFragment"/>


    <EditText android:id="@+id/textIntentBroadCast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="@string/textIntentBroadCast" />

    <Button
    android:id="@+id/btnStartBroadcast"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/extraIntent"
    android:onClick="broadcastCustomIntent"
    android:text="@string/btnStartBroadcast" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Map"
        android:onClick="goToMap"/>

</LinearLayout>
